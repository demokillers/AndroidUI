<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/scrollView1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1" >

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
	    
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:background="#FF000000"
	        android:gravity="center_horizontal"
	        android:text="好友信息"
	        android:textColor="#FFFFFFFF"
	        android:textSize="30sp" />
		
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_marginTop="10dp"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:background="@drawable/table_shape" 
	        android:orientation="horizontal" >
	
	        <LinearLayout
	            android:layout_width="match_parent"
	        	android:layout_height="wrap_content" 
	        	android:layout_weight="1"
	        	android:focusable="true"
	        	android:orientation="vertical">
	        			            						
		       <TextView
		           android:id="@+id/friend_info_user"
		           android:layout_width="match_parent"
		           android:layout_height="wrap_content"
		           android:ems="10"
		           android:text="昵称"
		           android:layout_margin="5dp"
		           android:textSize="20sp" />
	
		        <TextView
		            android:id="@+id/friend_info_name"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_margin="5dp"
		            android:textSize="20sp"
		            android:ems="10"
		            android:text="姓名" />
	        </LinearLayout>
	        
			<LinearLayout
	            android:layout_width="match_parent"
	        	android:layout_height="match_parent" 
	        	android:layout_weight="4"
	        	android:layout_marginBottom="6dp"
	        	android:orientation="vertical" >
	
				<ImageView
				    android:id="@+id/friend_info_portrait"
				    android:layout_width="match_parent"
				    android:layout_height="0dp"
				    android:layout_weight="1"
				    android:layout_gravity="fill"
				    android:background="@drawable/portrait" />
	         </LinearLayout>        
	    </LinearLayout>
	    		
		<LinearLayout 
		    android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_marginTop="10dp"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:background="@drawable/table_shape" 
	        android:orientation="vertical" >

			<RelativeLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content" >

				<TextView
				    android:id="@+id/textview1"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_margin="5dp"
				    android:text="性别"
				    android:textSize="20sp" />

				<TextView
				    android:id="@+id/friend_info_sex"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_alignParentRight="true"
				    android:layout_alignTop="@+id/textview1"
				    android:layout_marginRight="5dp"
				    android:text="男"
				    android:textSize="20sp" />

			</RelativeLayout>

			<RelativeLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content" >

				<TextView
				    android:id="@+id/textView2"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_margin="5dp"
				    android:text="年龄"
				    android:textSize="20sp" />

				<TextView
				    android:id="@+id/friend_info_age"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_alignParentRight="true"
				    android:layout_alignTop="@+id/textView2"
				    android:layout_marginRight="5sp"
				    android:text="20"
				    android:textSize="20sp" />

			</RelativeLayout>

			<RelativeLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content" >

				<TextView
				    android:id="@+id/textView3"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_margin="5dp"
				    android:text="联系电话"
				    android:textSize="20sp" />

				<TextView
				    android:id="@+id/friend_info_phone"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_alignTop="@+id/textView3"
				    android:layout_alignParentRight="true"
				    android:layout_marginRight="5sp"
				    android:text="0000"
				    android:textSize="20sp" />

			</RelativeLayout>

			<RelativeLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content" >

				<TextView
				    android:id="@+id/textView4"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_margin="5sp"
				    android:maxLines="2"
				    android:text="家庭住址"
				    android:textSize="20sp" />

				<TextView
				    android:id="@+id/friend_info_address"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_alignParentRight="true"
				    android:layout_alignTop="@+id/textView4"
				    android:layout_marginRight="5sp"
				    android:ellipsize="start"
				    android:ems="9"
				    android:gravity="right"
				    android:maxLines="2"
				    android:text="梵蒂冈胜多负少发生发生的所发生的飞胜多负少房顶上胜"
				    android:textSize="20sp" />

			</RelativeLayout>
	     </LinearLayout>

		<RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dp"
		    android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp"
		    android:background="@drawable/table_shape" >

		    <TextView
		        android:id="@+id/textView5"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_margin="5dp"
		        android:ems="15"
		        android:maxLines="2"
		        android:text="病史记录"
		        android:textSize="20sp" />

		    <TextView
		        android:id="@+id/friend_info_disease"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_alignTop="@+id/textView5"
		        android:layout_marginRight="5sp"
		        android:ellipsize="end"
		        android:ems="9"
		        android:gravity="right"
		        android:maxLines="2"
		        android:text="呵呵vgdfg收费单色范德萨发生对方是否都是的发送方低声道发生地方所发生的"
		        android:textSize="20sp" />

		</RelativeLayout>	
		     
		<LinearLayout 
			    android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		   		android:layout_marginTop="10dp"
		        android:layout_marginLeft="5dp"
		        android:layout_marginRight="5dp"
		        android:background="@drawable/table_shape" 
		        android:orientation="vertical" >

			<RelativeLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content" >

				<TextView
				    android:id="@+id/friend_info_credit"
				    android:layout_width="40dp"
				    android:layout_height="wrap_content"
				    android:layout_margin="5dp"
				    android:text="信誉"
				    android:textSize="20sp" />

				<RatingBar
				    android:id="@+id/friend_info_ratingBar"
				    style="?android:attr/ratingBarStyleSmall"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_alignParentRight="true"
				    android:layout_centerVertical="true"
				    android:layout_marginRight="5sp"
				    android:isIndicator="true"
				    android:numStars="5"
				    android:rating="5"
				    android:stepSize="0.5" />

			</RelativeLayout>

			<RelativeLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content" >

				<TextView
				    android:id="@+id/textView6"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_margin="5dp"
				    android:layout_marginTop="20dp"
				    android:text="积分"
				    android:textSize="20sp" />

				<TextView
				    android:id="@+id/friend_info_point"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_alignParentRight="true"
				    android:layout_alignTop="@+id/textView6"
				    android:layout_marginRight="5sp"
				    android:textSize="20sp"
				    android:text="0" />
			</RelativeLayout>
	    </LinearLayout>	    
			    
		<Button
				android:id="@+id/friend_info_back"
				android:layout_width="wrap_content"
				android:layout_marginTop="10dp"
				android:layout_height="50dp"
				android:layout_gravity="center"
				android:background="@drawable/main_regist_selector"
				android:text="返回" />

	</LinearLayout>
</ScrollView>